</div>
<div style="width: 75%;position:absolute; left:0;">
<table class="table table-hover">
    <thead class="thead-light">
    <tr>
        <th scope="col">#</th>
        <th scope="col">Tipo</th>
        <th scope="col">Tienda</th>
        <th scope="col">Size</th>
        <th scope="col">Cantidad</th>
        <th scope="col">Colores</th>
        <th scope="col">Accion</th>
    </tr>
    </thead>
    <tbody>
    <%if(car !== null){%>
            <%for(let i=0;i<car.length;i++){%>
            <tr>
                <th scope="row"><%=(i+1)%></th>
            <td><%=car[i].type%></td>
            <td><%=car[i].tienda%></td>
            <td><%=car[i].size%></td>
            <td><%=car[i].cant%></td>
            <td><%=car[i].colors%></td>
                <td>
                    <a href="#" id="delete" onclick="deleteItem(<%=car[i].id_i%>)" class="badge badge-danger">Delete</a>
                </td>
            </tr>
            <%}%>
 <%}else{%>
    <tr>
        <th scope="row"></th>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td>
        </td>
    </tr>
    <%}%>
    </tbody>
</table>
</div>
<div class="card" style="width: 25%; float: right">
    <div class="card-header">
        Resumen
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">Cantidad de Articulos: <%=items%></li>
        <li class="list-group-item">Subtotal: <%=price%></li>
        <li class="list-group-item">Vestibulum at eros</li>
    </ul>
</div>
